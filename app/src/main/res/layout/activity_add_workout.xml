<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWorkoutActivity"
    >



    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Enter time (seconds)"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/prompt_text"
        android:paddingLeft="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/prompt_text"
        android:layout_centerHorizontal="true"
        android:ems="5"
        android:id="@+id/time_edit_text"
        android:inputType="number"
        android:focusedByDefault="true"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_below="@id/time_edit_text"
        android:paddingLeft="0dp"
        android:id="@+id/type_text"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/type_text"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/workout_radio_button_group"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work out"
            android:textSize="30dp"
            android:id="@+id/work_out_radio_button"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause"
            android:textSize="30dp"
            android:id="@+id/pause_radio_button"
            />

    </RadioGroup>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  ADD  "
        android:textSize="40dp"
        android:layout_below="@id/workout_radio_button_group"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>